<script>
import { doCreate, getDicTab } from "@/utils/config";
import { formatDate } from "@/utils/data";
import { xmlbList } from "@/api/projectOutline";
import {
    capotalQuery,
    capotalAdd,
    capotalUpdate,
    capotalDel
} from "@/api/capitalSource";
export default {
    data() {
        return {
            zjlyList: [],
            xmList: [],
            ndoptions: [],
            ndoptions2: [],
            zjjboptions: [],
            sycjoptions: [],
            zjlboptions: [],
            zjxzoptions: [],
            xzqhoptions: [],
            bmbmoptions: [],
            dialogVisible: false,
            wgjVisible: false,
            zjlyForm: {},
            seatch_nd: "",
            seatch_name: "",
            zjlytit: "",
            dictTid: "新建",
            xmgjtit: "项目挂接",
            pageNo: 1,
            pageSize: 10,
            totalCount: 0,
            pageNo2: 1,
            pageSize2: 4,
            totalCount2: 0,
            rulesDic: {
                dicttype: [{ required: true, message: "不能为空" }],
                dictname: [{ required: true, message: "不能为空" }],
                dictcode: [
                    { required: true, message: "不能为空" },
                    { type: "number", message: "必须为数字值" }
                ]
            }
        };
    },
    methods: {
        getBmbm(row) {
            return getDicTab("bmbm", row.bmbm);
        },
        formatterData(row) {
            return formatDate(row.kssj, "yyyy-MM-dd");
        },
        formatterData2(row) {
            return formatDate(row.jssj, "yyyy-MM-dd");
        },
        ztDic(row) {
            if (row.zt) {
            }
            return getDicTab("zt", row.zt);
        },
        userClose() {
            this.dialogVisible = false;
            this.wgjVisible = false;
        },
        handleCurrentChange(val) {
            this.pageNo = val;
        },
        handleCurrentChange2(val) {
            this.pageNo2 = val;
            this.wgjMoudel();
        },
        indexMethod(index) {
            let start = (this.pageNo - 1) * this.pageSize;
            return start + index + 1;
        },
        indexMethod2(index) {
            let start = (this.pageNo2 - 1) * this.pageSize2;
            return start + index + 1;
        },
        zjlyAdd(row) {
            this.dialogVisible = true;
            this.zjlytit = "新建";
            this.zjlyForm = {
                xzqh: this.$store.state.user.user.uUser.xzqh,
                bmbm:this.$store.state.user.user.uUser.bmbm
            };
        },
        zjlyEdit(row) {
            this.dialogVisible = true;
            this.zjlytit = "编辑";
            this.zjlyForm = Object.assign({}, row);
        },
        zjlyDel(row) {
            let _this = this;
            this.$confirm("你确定删除吗?", "提示", {
                confirmButtonText: "确定",
                cancelButtonText: "取消",
                type: "warning"
            }).then(() => {
                capotalDel({ id: row.id }).then(res => {
                    let data = res.data;
                    if (data.success) {
                        this.$message({
                            type: "success",
                            message: data.msg
                        });
                        _this.zjlyQuery();
                    }
                });
            });
        },
        zjlyQuery() {
            let obj = {
                pageNo: this.pageNo,
                pageSize: this.pageSize,
                zjmc: this.seatch_name.trim(),
                nd: this.seatch_nd
            };
            capotalQuery(obj).then(res => {
                let data = res.data;
                if (data.success) {
                    this.zjlyList = data.msg.data;
                    this.totalCount = data.msg.totalCount;
                }
            });
        },
        btn_zjlySave() {
            let obj = Object.assign({}, this.zjlyForm);
            if (obj.id) {
                capotalUpdate(obj).then(res => {
                    let data = res.data;
                    if (data.success) {
                        this.$message({
                            message: data.msg,
                            type: "success"
                        });
                        this.dialogVisible = false;
                        this.zjlyQuery();
                    } else {
                        this.$message({
                            message: data.msg,
                            type: "success"
                        });
                    }
                });
            } else {
                capotalAdd(obj).then(res => {
                    let data = res.data;
                    if (data.success) {
                        this.$message({
                            message: data.msg,
                            type: "success"
                        });
                        this.dialogVisible = false;
                        this.zjlyQuery();
                    } else {
                        this.$message({
                            message: data.msg,
                            type: "success"
                        });
                    }
                });
            }
        },
        ygjMoudel() {},
        wgjMoudel() {
            this.wgjVisible = true;
            let obj = {
                pageSize: this.pageSize2,
                pageNo: this.pageNo2
            };

            xmlbList(obj).then(res => {
                this.xmList = res.data.data.elements;
                this.totalCount2 = res.data.data.totalCount;
            });
        },
        xmgjClick() {},
        usertypeDic(row) {
            return getDicTab("zt", row.zt);
        },
        getXzqh(row) {
            return getDicTab("xzqh", row.xzqh);
        }
    },
    mounted() {
        this.zjlyQuery();
        this.ndoptions = doCreate("nd");
        this.ndoptions2 = doCreate("nd");
        this.zjjboptions = doCreate("zjjb");
        this.zjlboptions = doCreate("zjlb");
        this.zjxzoptions = doCreate("zjxz");
        this.sycjoptions = doCreate("sycj");
        this.xzqhoptions = doCreate("xzqh");
        this.bmbmoptions = doCreate("bmbm");
    }
};
</script>


