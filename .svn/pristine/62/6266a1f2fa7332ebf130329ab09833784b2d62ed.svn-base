<script>
import { searchUnit } from "@/api/systemManage";
import xianModal from "./xianModal";
import shiModal from "./shiModal";
import shengModal from "./shengModal";
import xiangModal from "./xiangModal";
import { doCreate, getDicTab } from "@/utils/config";
import { xmmsAdd,xmmsChange } from "@/api/projectOutline";
import { formatDate } from "@/utils/data";
import { treeQuery } from "@/api/multistageDown";
export default {
    components: {
        xianModal,
        shiModal,
        shengModal,
        xiangModal
    },
    data() {
        return {
            newModalToggle: false,
            xianModal: false,
            shiModal: false,
            shengModal: false,
            xiangModal: false,
            ssdwVisible: false,
            textTitText: "",
            ssdwtit: "",
            ndoptions: [""],
            tableData: [""],
            multipleSelection: [],
            cylxoptions: [""],
            duojiOptions: [],
            xzqhoptions: [],
            bmbmoptions: [],
            options: [],
            checkBox: 0,
            pageNo2: 1,
            pageSize2: 6,
            totalCount2: 1,
            xianTit: "",
            shiTit: "",
            shengTit: "",
            xiangTit: "",
            editForm: {
                xmmc: "",
                nd: "",
                xmbh: "",
                cylx: "",
                ssdw: "",
                fzr: "",
                kssj: "",
                jssj: "",
                xmze: "",
                zyZj: "",
                shengZj: "",
                shiZj: "",
                xianZj: "",
                xiangZj: "",
                xzqh: this.$store.state.user.user.uUser.xzqh,
                bmbm: this.$store.state.user.user.uUser.bmbm,
                // xzqh1: getDicTab("xzqh",this.$store.state.user.user.uUser.xzqh),
                // bmbm1: getDicTab("bmbm",this.$store.state.user.user.uUser.xzqh+"-"+this.$store.state.user.user.uUser.bmbm),
                lrr: this.$store.state.user.user.uUser.username,
                lrsj: "",
                xmdz: "",
                xmGps: "",
                jsnr: "",
                shengFgks: "",
                shiFgks: "",
                xianFgks: "",
                xiangFgks: ""
            }
        };
    },
    props: {
        newModal: Boolean,
        textTit: String,
        editObj: {
            default: () => {}
        }
    },
    watch: {
        newModal(val) {
            this.newModalToggle = val;
        },
        textTit(val) {
            this.textTitText = val;
        },
        editObj(val) {
            // for (let attr in val) {
            //     this.editForm[attr] = val[attr];
            // }
            this.editForm = val;
            if (this.editForm.lrsj) {
                this.editForm.lrsj = formatDate(
                    this.editForm.lrsj,
                    "yyyy-MM-dd"
                );
            }
        }
    },
    methods: {
        duojiChange(value) {
            console.log(value);
        },
        xianToggle(val) {
            this.xianModal = val;
        },
        shiToggle(val) {
            this.shiModal = val;
        },
        shengToggle(val) {
            this.shengModal = val;
        },
        xiangToggle(val) {
            this.xiangModal = val;
        },
        shengShow() {
            this.shengModal = true;
            this.shengTit = "省级分管处室";
        },
        shiShow() {
            this.shiModal = true;
            this.shiTit = "市级分管处室";
        },
        xianShow() {
            this.xianModal = true;
            this.xianTit = "县级分管处室";
        },
        xiangShow() {
            this.xianModal = true;
            this.xianTit = "乡级分管处室";
        },
        shengFgks(val) {
            this.editForm.shengFgks = val;
        },
        shiFgks(val) {
            this.editForm.shiFgks = val;
        },
        xianFgks(val) {
            this.editForm.xianFgks = val;
        },
        xiangFgks(val) {
            this.editForm.xiangFgks = val;
        },
        btn_cancel() {
            this.newModalToggle = false;
            this.$emit("newToggle", this.newModalToggle);
        },
        userClose2() {
            this.btn_cancel();
        },
        userbtn_save() {
            let _this = this;
            if (this.editForm.id) {
                xmmsChange(_this.editForm).then(res => {
                    let data = res.data;
                    if (data.success) {
                        _this.btn_cancel();

                        this.$message({
                            message: data.msg,
                            type: "success"
                        });
                        let obj = {
                            pageNo: this.pageNo,
                            pageSize: this.pageSize
                        };
                        this.$emit("getList", obj);
                    }
                });
            } else {
              xmmsAdd(this.editForm).then(res => {
                let data = res.data;
                if (data.success) {
                    _this.btn_cancel();

                    this.$message({
                        message: data.msg,
                        type: "success"
                    });
                    let obj = {
                        pageNo: this.pageNo,
                        pageSize: this.pageSize
                    };
                    this.$emit("getList", obj);
                }
            });
            }
            
        },

        checkChildren(data) {
            let _this = this;
            data.map(d => {
                if (d.children.length) {
                    _this.checkChildren(d.children);
                } else {
                    delete d.children;
                }
                return d;
            });
        },
        indexMethod(index) {
            let start = (this.pageNo2 - 1) * this.pageSize2;
            return start + index + 1;
        },
        ssdwFocus() {
            this.ssdwVisible = true;
            this.ssdwtit = "实施单位列表";
            let obj = {
                pageNo: this.pageNo2,
                pageSize: this.pageSize2
            };
            searchUnit(obj).then(res => {
                let data = res.data;
                if (data.success) {
                    this.tableData = data.msg.data;
                    this.totalCount2 = data.msg.totalCount;
                }
            });
        },
        checkboxChange(val) {
            this.multipleSelection = val;
        },
        userClose() {
            this.ssdwVisible = false;
        },
        handleCurrentChange2(val) {
            this.pageNo2 = val;
            this.ssdwFocus();
        },
        ssdwSelectBc() {
            this.ssdwVisible = false;
            if (this.multipleSelection.length) {
                this.editForm.ssdw = this.multipleSelection[0].dwmc;
                this.editForm.fzr = this.multipleSelection[0].fzr;
            }
        }
    },
    mounted() {
        this.ndoptions = doCreate("nd");
        this.cylxoptions = doCreate("cylb");
        this.xzqhoptions = doCreate("xzqh");
        this.bmbmoptions = doCreate("bmbm");

        treeQuery().then(res => {
            let data = res.data;
            this.checkChildren(data);
            this.options = data;
        });
    }
};
</script>
