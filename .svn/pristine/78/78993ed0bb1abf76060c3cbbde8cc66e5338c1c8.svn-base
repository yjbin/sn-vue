              </el-form-item>
            </el-col>
          </el-row>
           <el-row class="textarea">
            <el-col :span="22">
              <el-form-item label="拨付说明" prop="bfsm">
                <el-input type="textarea" :autosize="{ minRows: 5}" v-model="bfzjFrom.bfsm" placeholder="拨付说明"></el-input>
